<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%> <%	String path = request.getContextPath();	String basePath = request.getScheme() + "://"			+ request.getServerName() + ":" + request.getServerPort()			+ path + "/"; %><%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%><%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt"%><!DOCTYPE html><html>  <head>    <c:choose>    	<c:when test="${user.userTypeId==4}">    		<title>${loginBean.eName} - Notice</title>    	</c:when>    	<c:otherwise><title>${loginBean.cName} - 公告</title></c:otherwise>    </c:choose>    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport" />    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />    <base href="<%=basePath%>" />  </head>  <body class="contrast-red">     <%@ include file="/common/res.jsp" %> 	 <!-- 引入header头部 -->     <%@ include file="/common/header.jsp" %>
     <div id="wrapper">      <!-- 引入左侧导航栏 -->      <%@ include file="/common/nav.jsp" %>      <section id="content">        <div class="container-fluid">          <div class="row-fluid" id="content-wrapper">            <div class="span12">              <div class="page-header">                <h1 class="pull-left">                  <i class="icon-bullhorn"></i>                  <c:choose>                  	<c:when test="${user.userTypeId==4}"><span>Notice</span></c:when>                  	<c:otherwise><span>教务公告</span></c:otherwise>                  </c:choose>                </h1>              </div>              <!-- 最新公告开始 -->              <div class="row-fluid">                <div class="span12 box">                  <div class="box-header box-header-small purple-background">                    <div class="title" style="font-size: 20px;">                    <b>                    <c:choose>                  		<c:when test="${user.userTypeId==4}"><span>Latest Notice</span></c:when>                  		<c:otherwise><span>最新公告</span></c:otherwise>                   </c:choose>                    </b>                    </div>                    <div class="actions">                      <a href="#" class="btn box-collapse btn-mini btn-link"><i></i></a>                    </div>                  </div>                  <div class="box-content">                    <div class="col-md-12" id="noticeTitle">                    	<c:choose>                    		<c:when test="${not empty currentNotice}">${currentNotice.title}</c:when>                    		<c:otherwise>公告标题</c:otherwise>                    	</c:choose>                    </div>                    <div class="col-md-12" id="noticeInfo">                      <span><i class="fa fa-user"></i>${currentNotice.writer}</span>&emsp;&emsp;<span><i class="fa fa-edit"></i>                      <c:choose>                    		<c:when test="${not empty currentNotice}">${currentNotice.publishDate}</c:when>                    		<c:otherwise>发布时间（默认信息）</c:otherwise>                      </c:choose>                      </span>                    </div>                    <div class="col-md-12" id="noticeSection">                      <c:choose>                    		<c:when test="${not empty currentNotice}">${currentNotice.content}</c:when>                    		<c:otherwise>系统中没有公告信息...</c:otherwise>                      </c:choose>                    </div>                  </div>                </div>              </div>              <!-- 最新公告结束 -->              <!-- 历史公告开始 -->			  <%@ include file="/common/historyNotice.jsp" %>              <!-- 历史公告结束 -->            </div>          </div>        </div>      </section>    </div>
  </body></html>