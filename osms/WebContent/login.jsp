<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%><!DOCTYPE html><html><head>    <title>Sign in</title>    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport" />    <!-- 引入公共资源css和js -->    <%@ include file="/common/res.jsp" %>    <style media="screen">      input{        transition: all 0.3s;      }    </style></head><body class="contrast-red sign-in contrast-background"><div id="wrapper">    <div class="application">        <div class="application-content">            <a href="${pageContext.request.contextPath}/index.html?type=init">                <span style="color: #d95d5d;"></sapn>NingBo University of Technology</span>            </a>        </div>    </div>    <div class="controls" style="background: rgba("0,0,0,0.5");">        <div class="form-wrapper">            <h1 class="text-center" style="color: #fff;">Sign in</h1>            <form accept-charset="UTF-8" action="${pageContext.request.contextPath}/index.htm" method="post" />            <div style="margin:0;padding:0;display:inline"><input name="utf8" type="hidden" value="&#x2713;" /></div>            	<label style="color:red;">${error_msg}</label>                <div class="row-fluid">                    <div class="span12 icon-over-input">                        <input class="span12" id="email" name="email" placeholder="Username" type="text" value="" />                        <i class="icon-user muted"></i>                    </div>                </div>                <div class="row-fluid">                    <div class="span12 icon-over-input">                        <input class="span12" id="password" name="password" placeholder="Password" type="password" value="" />                        <i class="icon-lock muted"></i>                    </div>                </div>                                <button style="border: 0px;" class="btn btn-block transition" name="button" type="submit">Sign in</button>            </form>        </div>    </div></div></body>
</html>